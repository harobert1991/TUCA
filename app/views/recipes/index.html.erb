
<div class="container">
  <h1>Choose a Recipe</h1>
  <div class="row">
    <% @recipes.each do |recipe| %>
      <% link_to '#' do %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path recipe.photo %>')";>

          <div class="card-body">
          <div class="card-description">
            <h2> <%= recipe.name %> </h2>
            <p><%= recipe.description %> </p>
          </div>
          <div class="card-time">
            <%= (recipe.cooking_time) %>
          </div>
        </div>

        </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
