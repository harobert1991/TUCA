

<div class="container search-banner">
<div class="row">
  <div class="col-xs-10 ">
<%= form_tag search_path, method: :get, class:"search-bar" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find your recipe" %>
  <% end %>
  </div>
</div>
</div>

<div class= "container" id="card-container">
  <% @recipes.each do |recipe| %>
      <%= render :partial => 'shared/recipe_card', locals: { recipe: recipe } %>
  <% end %>
</div>
</div>
