<div class="home_container">
  <div class="row">
  <div class="row header">
    <h1> TUCA </h1>
  </div>
    <div class="col-md-12">
      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <div class=" imageee hidden-xs hidden-sm">
            <%= image_tag ("cooking2.jpg") %>
            <div class="carousel-caption">
              <div> <%=  link_to recipe_path(@recipe_of_the_day) do %>
               <span class="btn" id="random_btn"><h1> Pick a recipe <br> <i class="fas fa-random"></i></h1> </span>
               <% end %>
              </div>
            </div>
          </div>
          <div class="hidden-md hidden-lg">
          <%= image_tag ("vegetables.jpg") %>
            <div class="carousel-caption">
              <div> <%=  link_to recipe_path(@recipe_of_the_day) do %>
              <span class="btn" id="random_btn"><h1> Pick a recipe <br> <i class="fas fa-random"></i></h1> </span>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




<span class="text-center"> <h1>Choose a Category</h1> </span>


<% @categories.each do |category| %>
<%= link_to recipes_path(category: category.name) do  %>
<div class="row">
  <div class="col-xs-10 col-md-8 col-xs-offset-1 col-md-offset-2">
    <div class="card-basic card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path category.photo %>')">
      <%= category.name  %>
    </div>
  </div>
</div>
<% end %>
<% end %>





