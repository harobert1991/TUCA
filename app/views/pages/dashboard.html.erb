<div id="banner-dash">
    <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
    <%= image_tag avatar_url, class: "prof-pic"%>
</div>
<div class="container">
  <h1 class="text-center" id="dash-title">My favorite recipes</h1>
  <div class="row">
    <div class="col-xs-12 text-center">
      <% @favorites.each do |fav| %>
        <%= render :partial => 'shared/dashboard_card', locals: { recipe: fav.recipe, favorite: fav } %>
      <% end %>
    </div>
  </div>
  <br>
  <br>
  <div class="row">
    <div class="text-center">
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-primary" do %>
          <i class="fas fa-sign-out-alt"></i>
          Logout
        <% end %>
      <% end %>
    </div>
  </div>
</div>



